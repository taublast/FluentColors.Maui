<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <ImplicitUsings>disable</ImplicitUsings>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>

    <!-- NuGet Package Metadata -->
    <PackageId>FluentColors.Maui</PackageId>
    <Version>1.0.0.1</Version>
    <Authors>Nick Kovalsky aka AppoMobi</Authors>
    <Company>AppoMobi</Company>
    <Description>Fluent, strongly-typed color resources with IntelliSense support for .NET MAUI auto-generated from Colors.xaml. Adds colors extensions methods (Lighten, Darken, WithOpacity, etc.) as a bonus.</Description>
    <PackageTags>maui;xaml;colors;codegen;msbuild;resources;generator;fluent;extensions</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/racebox</PackageProjectUrl>
    <RepositoryUrl>https://github.com/racebox</RepositoryUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>

    <!-- MSBuild Task Configuration -->
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <IncludeBuildOutput>true</IncludeBuildOutput>
    <SuppressDependenciesWhenPacking>true</SuppressDependenciesWhenPacking>
    <DevelopmentDependency>true</DevelopmentDependency>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Build.Framework" Version="17.11.4" PrivateAssets="all" />
    <PackageReference Include="Microsoft.Build.Utilities.Core" Version="17.11.4" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <!-- Include the README file in the package -->
    <None Include="..\README.md" Pack="true" PackagePath="\" />
    <!-- Include the build targets file in the package -->
    <None Include="build\FluentColors.Maui.targets" Pack="true" PackagePath="build\" />
    <None Include="buildTransitive\FluentColors.Maui.targets" Pack="true" PackagePath="buildTransitive\" />
  </ItemGroup>

</Project>